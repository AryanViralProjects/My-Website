rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write to the 'mailing_list' collection
    // This is okay for a "coming soon" page where you want to collect emails.
    // For more complex apps, you'd want more restrictive rules.
    match /mailing_list/{emailId} {
      allow create: if true;
    }
    // Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
